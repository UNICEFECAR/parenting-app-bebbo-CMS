          $items_data[$job_item_id] = [
            'entity_id' => $entity_id,
            'row' => $row,
          ];
        }
        else {
          $items_data[$job_item_id] = [
            'entity_id' => 0,
            'row' => $row,
          ];
        }
      }

      // Sort items if Node ID sorting is requested.
      if ($current_order === 'node_id') {
        uasort($items_data, function ($a, $b) use ($current_sort) {
          $a_val = (int) $a['entity_id'];
          $b_val = (int) $b['entity_id'];
          return $current_sort === 'asc' ? $a_val <=> $b_val : $b_val <=> $a_val;
        });
      }

      // Rebuild the options with Node ID column.
      $form['items']['#options'] = [];
      foreach ($items_data as $job_item_id => $item_data) {
        if ($item_data['entity_id'] > 0) {
          // Prepend Node ID as the first column.
          $form['items']['#options'][$job_item_id] = array_merge(
            [[
              'data' => [
                '#type' => 'link',
                '#title' => $item_data['entity_id'],
                '#url' => Url::fromRoute('entity.node.edit_form', ['node' => $item_data['entity_id']]),
                '#attributes' => ['target' => '_blank'],
              ],
            ],
            ],
            $item_data['row']
          );
        }
        else {
          // For non-node items, add empty cell.
          $form['items']['#options'][$job_item_id] = array_merge(['-'], $item_data['row']);
        }
      }
    }
  }
